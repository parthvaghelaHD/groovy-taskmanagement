pipeline {
    agent any
    environment {
        DEPLOY_PATH = './groovy-taskmanagement1'
    }
    stages {
        stage('Clone') {
            steps {
                git branch: 'feature/development', url: 'https://github.com/parthvaghelaHD/groovy-taskmanagement.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Test') {
            steps {
                sh 'npm test' // Ensure your tests pass
            }
        }
        stage('Build') {
            steps {
                sh 'npm run build' // Modify this if your build command differs
            }
        }
        stage('Deploy') {
            steps {
                script {
                    // Copy files to the deployment path
                    sh """
                    rsync -av --exclude='.git' . ${DEPLOY_PATH}
                    cd ${DEPLOY_PATH}
                    npm install
                    """

                    // Start or restart the app with PM2
                    sh """
                    pm2 startOrRestart ecosystem.config.js || pm2 start src/app.js --name Groovy --watch
                    pm2 save
                    """
                }
            }
        }
    }
    post {
        always {
            // Archive logs or do other cleanup
            echo 'Deployment completed.'
        }
        failure {
            echo 'Deployment failed.'
        }
    }
}
